.sidenav-container
  height 100%

.sidenav
  width 200px

.mat-toolbar.mat-primary
  position sticky
  top 0
  z-index 1

.mat-drawer-side
  border-right none

.mat-drawer-backdrop.mat-drawer-shown
  background-color rgba(15, 15, 15, 0.6)

.sidenav-toolbar-desktop
  background #616161

.nav-top-toolbar
  box-shadow 0 2px 2px rgba(15, 15, 15, 0.6)

.nav-side-toolbar
  box-shadow 2px 0 2px rgba(15, 15, 15, 0.6)

.navigation-content
  margin 20px

.album-card
  width 350px
  height 450px

.album-card .mat-card-image
  object-fit cover
  height calc(100% - 100px + 32px)

app-player-bar
  position fixed
  bottom 0
  left 200px
  width 100%
  z-index 2
